{
  "name": "ghostcrm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:e2e": "playwright test --project=chromium",
    "test:smoke": "playwright test tests/health.spec.ts",
    "test:prod": "playwright test --project=production",
    "test:health": "playwright test tests/health.spec.ts --project=production",
    "commit": "git add . && git commit",
    "push": "git push origin main",
    "deploy": "git add . && git commit && git push origin main",
    "deploy:dev": "GHOST_ENV=development npm run build && echo 'Development build complete'",
    "deploy:staging": "GHOST_ENV=staging npm run build && echo 'Staging build complete'",
    "deploy:prod": "GHOST_ENV=production npm run build && echo 'Production build complete'",
    "quick-deploy": "git add . && git commit -m \"Quick deploy: $(Get-Date -Format 'yyyy-MM-dd HH:mm')\" && git push origin main",
    "migration:run": "node scripts/run-migrations.js",
    "migration:create": "node scripts/create-migration.js",
    "env:setup": "node scripts/setup-environments.js",
    "deployment:test": "node scripts/test-deployment-system.js"
  },
